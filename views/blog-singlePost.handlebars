<div class="row" style="margin-top: 2%">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>{{post.title}}</h1>
                <p>{{{dateFormat post.post_date}}}</p>
            </div>
            <div class="panel-body blog-bg">
                <div>
                    <div>{{{post.content}}}</div>

                    <div style="margin-top: 5%">
                            <a class="btn btn-default" href="{{referringUrl}}">Back to all posts</a>

                        <span class="pull-right">
                            {{#if isAdmin}}
                                <input id="postId" type="hidden" value="{{post.post_id}}">
                                <button id="deletePost" class="btn btn-danger">Delete</button>
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








